<!DOCTYPE html>


<html>
    <head>
        <title>Details</title>
        <link href="/css/bootstrap.min.css" rel="stylesheet">
    </head>
    <body>
        <div class="container">
        <form style='text-align: center'>

            <a href="/barivara.com" class="btn btn-primary">Back</a><br>
            <br>
            <div class="table table-striped">
            <table class="table" style="text-align:center">
                <tr>
                    <th>Ad</th>
                    <th>option</th>
                </tr>
                <% for(var i = 0; i < ads.length; ++i) { %>
                    <tr>
                        <td>
                        <pre> 
                        <a href='/show/<%= ads[i].PostedBy %>'>Posted By:<%= ads[i].PostedBy%> </a>
                        Rent Type:<%= ads[i].RentType%>
                        Posted At:<%= ads[i].DateOfPost%>
                        Bed Room:<%= ads[i].BedRoom%>
                        Separate Dining & Drawing:<%= (ads[i].SDDR) ? 'Yes':'No' %>
                        Kitchen:<%= ads[i].Kitchen%>
                        Toilet:<%= ads[i].Toilet %>
                        Address:<%= ads[i].Address%>
                        Descrition:<%= ads[i].Description %>
                        </pre>
                        </td>
                <td>
                <a href='/contactLandlord/<%= ads[i].PostedBy%>' class="btn btn-primary">Contact Landlord</a><br>
                </td>
                </tr>
                <% } %>
            </table>
            </div>
            
        </form>
        </div>
    </body>
</html>